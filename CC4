  PH.add(new Song("Kaleidoscope", "02:56") );
  PH.add(new Song("Salad Days (Are Here Again)", "03:40") );
  PH.add(new Song("Good Captain Clack", "01:33") );
  PH.add(new Song("Repent Walpurgis", "01:33") );
  PH.add(new Song("Lime Street Blues", "03:01") );
  PH.add(new Song("Homburg", "03:56") );
  PH.add(new Song("Monsieur Armand", "02:25") );
  PH.add(new Song("Seem To Have The Blues All The Time", "02:46") );


  DIIV = new Album("DIIV", "2012/06/25", "Oshin","https://f4.bcbits.com/img/a2808621709_16.jpg","https://www.youtube.com/embed/qrykQv3NFcU");
  DIIV.add(song1=new Song("(Druun)", "02:07") );
  DIIV.add(song2=new Song("Past Lives", "02:21") );
  DIIV.add(song3=new Song("Human", "02:57") );
