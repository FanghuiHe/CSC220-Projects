  function print(Album){
    let pic = Album.image;
    let video = Album.video;
    document.getElementById("title").innerHTML ='Album: '+Album.title;
    document.getElementById("artist").innerHTML ='Artist: '+Album.artist;
    document.getElementById("released_date").innerHTML ='Released Date: '+Album.released_date+'<br>';
    document.getElementById("songs").innerHTML = null;
    for (let i = 0; i<Album.album_list.length; i++){
    document.getElementById("songs").innerHTML += Album.album_list[i].song_name+ "  "+Album.album_list[i].duration +'<br>'+'<br>' ;
    }
    return [pic,video]
    } 


  function display(album) {
    let pic;
    let video;
    if (album == 1) {
        temp = print(PH)
      pic = temp[0];
        video = temp[1];
      }
    
    if (album == 2) {
      temp = print(DIIV)
        pic = temp[0]
        video = temp[1]
      }
    
    if (album == 3){
      temp = print(Minks)
        pic = temp[0]
        video = temp[1]
      }
    
    document.getElementById('image').src = pic;
    document.getElementById('video').src = video;

}
  
