 <script>
  function Album (artist, released_date, title,image,video){
 this.image = image;
 this.video = video;
 this.artist = artist;
 this.title = title;
 this.released_date = released_date;
 this.album_list = [];
 this.add = function add(Song){
  this.album_list.push(Song);
 }

  }
  
  function Song (song_name, duration){
 this.artist = Album.artist;
 this.released_date = Album.released_date;
 this.title = Album.title; 
 this.song_name = song_name;
 this.duration = duration; 
  };
  
  PH = new Album("Procol Harum", "1997/06/29", "A Whiter Shade of Pale","https://f4.bcbits.com/img/a3929070147_16.jpg","https://www.youtube.com/embed/Mb3iPP-tHdA");
  p1=new Song("A Whiter Shade of Pale", "04:07")
  PH.add(new Song("A Whiter Shade of Pale", "04:07") );
  PH.add(new Song("Conquistador", "02:40") );
  PH.add(new Song("She Wandered Through The Garden Fence", "03:26") );
  PH.add(new Song("Something Following Me", "03:40") );
